{
  "manifest_version": 2,

  "name": "Concise280",
  "description": "This extension reduces all tweets over 280 characters down to 140.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": ["jquery-3.2.1.min.js", "content.js"]
    }
  ]
}
